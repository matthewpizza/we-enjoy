#!/bin/bash

pushd `dirname $0` > /dev/null
	dir=`pwd`
popd > /dev/null

bower="$dir/../../bower_components"
vendor="$dir/../../scripts/vendor"

if [ ! -d "$vendor" ]; then
  mkdir "$vendor"
fi

cp "$bower/requirejs/require.js" "$vendor"
cp -a "$bower/jquery/dist/." "$vendor"
cp "$bower/jquery-pjax/jquery.pjax.js" "$vendor"