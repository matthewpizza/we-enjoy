#!/usr/bin/env bash

# welcome
echo "We Enjoy"

# where are we
pushd `dirname $0` > /dev/null
	project_root=$(dirname `pwd`)
popd > /dev/null

# filename, today, example 2013-11-13-wednesday
post_file="$(date +"%Y-%m-%d-%A").md"

# lowercase string, date function returns first upper
post_file=$(tr [A-Z] [a-z] <<< $post_file)

# absolute paths
post_file="$project_root/_posts/$post_file"

# does the file already exist?
if [ -f $post_file ]; then
	# yup
	echo "$post_file exists"
	vim $post_file
	exit
else
	# nope, create file
	touch $post_file || exit
	echo "created $post_file"
fi

post_title=$(date +"%A, %B %e, %Y")
post_date=$(date +"%Y-%m-%d %T")

cat <<EOF >> $post_file
---
layout: photo
title: $post_title
date: $post_date

photo:
alt:
source:
---
EOF

vim $post_file
